node {
    def mvnHome

    stage('Setup Tools') {
        mvnHome = tool name: "Maven_Home", type: 'maven'
    }

    stage('Compile Code') {
       bat "${mvnHome}\\bin\\mvn compile"
    }

    stage('Test Code') {
       bat "mvn test"
    }

    stage('Create build') {
       bat "mvn package"
    }
}
